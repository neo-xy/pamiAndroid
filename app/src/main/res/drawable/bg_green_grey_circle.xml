<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval" >
            <gradient android:type="radial" android:gradientRadius="48"
                android:startColor="#0db101" android:endColor="#ffffff" />

        </shape>
    </item>

    <item  android:state_pressed="true"  >

        <shape android:shape="oval">
            <gradient android:type="radial" android:gradientRadius="40"
                android:startColor="#0db101" android:endColor="#0db101" />

        </shape>
    </item>

</selector>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pami.com.pami.ScheduleFragment"

    >


    <TextView
        android:id="@+id/month_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="22sp"
        android:text="january 2018" />

    <LinearLayout
        android:id="@+id/calendar_week_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/month_display"
        android:orientation="horizontal">

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/my_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/calendar_week_days"
        android:layout_marginBottom="25dp">
    </android.support.v4.view.ViewPager>

    <pami.com.pami.WeekView
        android:id="@+id/week_View"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        >



    </pami.com.pami.WeekView>



</RelativeLayout>
